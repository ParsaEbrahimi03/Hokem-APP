<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textCardTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCardBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:rotation="180"
        android:text="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageCardTop"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/c"
        app:layout_constraintEnd_toEndOf="@id/textCardTop"
        app:layout_constraintStart_toStartOf="@id/textCardTop"
        app:layout_constraintTop_toBottomOf="@id/textCardTop" />

    <ImageView
        android:id="@+id/imageCardBottom"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:rotation="180"
        android:src="@drawable/c"
        app:layout_constraintBottom_toTopOf="@id/textCardBottom"
        app:layout_constraintEnd_toEndOf="@id/textCardBottom"
        app:layout_constraintStart_toStartOf="@id/textCardBottom" />

    <ImageView
        android:id="@+id/imageCardCenter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>